div(id="home-link")
    header#nav.header.header-1.black-header.mobile-no-transparent
        .header-wrapper
            .container-m-30.clearfix
                .logo-row
                    // LOGO
                    .logo-container-2
                        .logo-2
                            a.clearfix(href='/')
                                include ./logo.jade
                    // BUTTON
                    .menu-btn-respons-container
                        button.navbar-toggle.btn-navbar.collapsed(type='button', data-toggle='collapse', data-target='#main-menu .navbar-collapse')
                            span.icon_menu.hamb-mob-icon(aria-hidden='true')
            // MAIN MENU CONTAINER
            .main-menu-container
                .container-m-30.clearfix
                    // MAIN MENU
                    #main-menu
                        .navbar.navbar-default(role='navigation')
                            // MAIN MENU LIST
                            nav.collapse.navbar-collapse.right-1024
                                ul.nav.navbar-nav(id="nav-onepage")
                                    // MENU ITEM
                                    li(class=typeof currentPage !== 'undefined' && currentPage === 'home' ? 'current' : '')
                                        a(href='https://ciphergram.io/index.html#home-link')
                                            .main-menu-title HOME
                                    li(class=typeof currentPage !== 'undefined' && currentPage === 'about' ? 'current' : '')
                                        a(href='https://ciphergram.io/index.html#about-us-link')
                                            .main-menu-title ABOUT
                                    li(class=typeof currentPage !== 'undefined' && currentPage === 'services' ? 'current' : '')
                                        a(href='https://ciphergram.io/index.html#services-link')
                                            .main-menu-title SERVICES
                                    li(class=typeof currentPage !== 'undefined' && currentPage === 'pricing' ? 'current' : '')
                                        a(href='/pricing.html')
                                            .main-menu-title PRICING
                                    li(class=typeof currentPage !== 'undefined' && currentPage === 'clients' ? 'current' : '')
                                        a(href='https://ciphergram.io/index.html#our-clients')
                                            .main-menu-title OUR CLIENTS
                                    li(class=typeof currentPage !== 'undefined' && currentPage === 'work' ? 'current' : '')
                                        a(href='https://ciphergram.io/index.html#our-work-link')
                                            .main-menu-title OUR WORK
                                    li(class=typeof currentPage !== 'undefined' && currentPage === 'contact' ? 'current' : '')
                                        a(href='https://ciphergram.io/index.html#contact-link')
                                            .main-menu-title CONTACT
                                    li(class=typeof currentPage !== 'undefined' && currentPage === 'blog' ? 'current' : '')
                                        a(href='/blog')
                                            .main-menu-title BLOG
                    // END main-menu
                // END container-m-30
            // END main-menu-container