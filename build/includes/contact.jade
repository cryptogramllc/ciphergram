.page-section.gray-bg(id="contact-link")
    .container
        .row
            .col-md-12
                .contact-form-cont
                    // TITLE
                    .mb-40
                        h2.section-title
                            span.bold CONTACT US
                    // CONTACT FORM
                    div
                        form#contact-form
                            .row
                                .col-md-12.mb-30
                                    // <label>Your name *</label>
                                    input#name.controled(type='text', value='', data-msg-required='Please enter your name', maxlength='100', name='name', placeholder='NAME', required='')
                            .row
                                .col-md-12.mb-30
                                    // <label>Your email address *</label>
                                    input#email.controled(type='email', value='', data-msg-required='Please enter your email address', data-msg-email='Please enter a valid email address', maxlength='100', name='email', placeholder='EMAIL', required='')
                            .row
                                .col-md-12.mb-40
                                    // <label>Message *</label>
                                    textarea#message.controled(maxlength='5000', data-msg-required='Please enter your message', rows='3', name='message', placeholder='MESSAGE', required='')
                            .row
                                .col-md-12.text-center
                                    input.button.medium.gray(id="submit", type='submit', value='SEND MESSAGE', data-loading-text='Loading...')
                        .alert.alert-success.hidden.animated.fadeIn
                            strong Success!
                        .alert.alert-danger.hidden.animated.shake
                            strong Error!       

